@model AddOrEditReaderViewModel


<div class="row mx-4">
    <div class="col-lg-6">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="form-group">
            <label asp-for="PhoneNum">PhoneNum</label>
            <input type="text" asp-for="PhoneNum" class="form-control" placeholder="Enter Phone number">
            <span asp-validation-for="PhoneNum" class="text-danger"></span>
        </div>
    </div>

</div>


<div class="row mx-4">
    <div class="col-lg-6">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Enter Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <label>Files</label>
            <input type="file" class="form-control-file" multiple name="FormFiles" asp-for="FormFiles">
        </div>
    </div>

</div>


<div class="row mx-4">
    <div class="col-lg-6">
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="text" asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
</div>


<div class="row mx-4 text-danger" asp-validation-summary="ModelOnly"></div>

<div class="btn-group  mx-4  float-end">
    <a class="btn btn-outline-danger me-2" asp-action="Index">Cancel</a>
    <button type="submit" class="btn btn-success me-2"><i class="fa-regular fa-check"></i> Save</button>
</div>
