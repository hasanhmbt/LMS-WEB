    }

    .BookAuthor {
        text-decoration: none;
        color: #718096;
        font-size: 14px;
        font-weight: 200;
    }

    .BookName {
        margin: 0;
        color: #1a202c;
        font-size: 20px;
    }

    .BookDescription {
        margin: 0;
        font-size: 16px;
        color: #4a5568;
    }

    .BookDescription {
        display: -webkit-box;
        overflow: hidden;
        max-height: 50px;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        line-height: 24px;
    }

    .OrderSection {
        display: flex;
        width: 100%;
        justify-content: end;
    }

    .orderBtn {
        display: flex;
        align-items: center;
        border: none;
        text-decoration: none;
        height: 40px;
        padding: 0 16px;
        border-radius: 4px;
