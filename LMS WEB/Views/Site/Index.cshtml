    }

    .BookCard {
        display: flex;
        border: 1px #e5e7eb solid;
        border-radius: 8px;
        height: 200px;
        width: 450px;
        max-width: 100%;
        transition: 0.3s;
    }

        .BookCard:hover {
            transform: scale(1.02);
        }

    .CardImage {
