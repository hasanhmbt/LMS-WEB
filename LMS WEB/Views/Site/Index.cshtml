@model List<VwMostOrderedBook>


@{
    ViewData["Title"] = "Home";
}



<style>
    .truncated-text {
        cursor: pointer;
    }

    .popup {
        position: absolute;
        display: none;
        padding: 5px;
        background-color: white;
        border: 1px solid black;
        z-index: 9999;
        border-radius: 5px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        font-size: 14px;
    }

    .card {
        border: none;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
        height: 96%;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-img-top {
        height: 400px;
        object-fit: cover;
    }

    .card-body {
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 80%;
    }

    .card-title {
        font-weight: 500;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .card-text {
        margin-bottom: 1rem;
        height: 80px;
        overflow: hidden;
        text-overflow: ellipsis;
        word-break: break-word;
    }

    .btn {
        font-size: 1rem;
        border-radius: 50px;
        padding: 0.75rem 1rem;
        margin-top: auto;
        width: 100%;
    }
</style>

<hr> 
<h1 class="mint" style="text-align: center">Most read books</h1>



<div class="container mx-auto mt-4">
    <div class="row">



        @foreach (var book in Model)
        {
            <div class="col-md-3 mb-3 ">    
                <div class="card">
                    <img src="@book.ImagePath" asp-append-version="true" class="card-img-top" />

                    <div class="card-body">
                        <h5 class="card-title">@book.Name</h5>
                        <a asp-controller="SiteBook" asp-action="BookAuthor" asp-route-id="@book.AuthorId"><i class="fas fa-feather"></i> @book.Author </a>
                        <p class="card-text">@book.Description</p>
                        <a asp-controller="SiteBook" asp-action="OrderBook" asp-route-id="@book.Id" class="btn btn-secondary mt-2"><i class="fa-regular fa-bag-shopping"></i> Order</a>
                    </div>
                </div>
            </div>
        }
       

    </div>
</div>

 <hr>

 
<h1 class="mint" style="text-align: center">Recommended</h1>




<style>
    .BookCon {
        max-width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 24px 48px;
        flex-wrap: wrap;
        overflow: hidden;
        flex-direction: row;
