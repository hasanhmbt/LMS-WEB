@model List<Vworeder>

@{
    ViewData["Title"] = "Order Book";
}


<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/animate.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />




<style>
    .button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 3px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
    }

</style>


<div style="min-height:80vh; justify-content:center; margin: 0 auto; flex:content; width:200vh; ">
    <div class="row mx-1 pt-5" >
        <table class="table   shadow text-center"  >
            <thead class="table-dark">

                <tr>
                    <th scope="col" >#</th>
                    <th scope="col">Book</th>
                    @*<th scope="col">User Name</th>*@
                    <th scope="col">Order Date</th>
                    <th scope="col">Return book</th>

                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1;
                }
                @foreach (var order in Model)
                {
                    <tr>
                        <th scope="row">@counter</th>

                        <td>@order.BookName</td>
                       @* <td>@order.UserName</td>*@
                        <td>@order.OrderDate</td>
                        <td>
                            <a method="post" asp-action="DeleteOrder" asp-route-id="@order.Id" class="btn btn-sm  button ">  <i class="fa-sharp fa-regular fa-arrow-rotate-left"></i> </a>
                        </td>

                    </tr>

                    counter++;
                }

            </tbody>
        </table>
    </div>

</div>